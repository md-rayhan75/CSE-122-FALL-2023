#include<iostream>
using namespace std;
class way
{
public:
    int n;
    string s;
    void input ()
      {
          cin>>n;
      }
      void output()
      {
           for(int i=0;i<n;i++)
    {
        cin>>s;
        if(s.length()>10)
        {
            cout<<s[0]<<s.length()-2<<s[s.length()-1]<<endl;
        }
        else
            cout<<s<<endl;
    }
      }
};
int main()
{
    way obj;
    obj.input();
    obj.output();
}
